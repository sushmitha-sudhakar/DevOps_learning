# To create a status check alarm via AWS CLI
aws cloudwatch put-metric-alarm --alarm-name StatusCheckFailed --alarm-description “Alarm-for-test-instance” --metric-name StatusCheckFailed --namespace AWS/EC2 --statistic Average --period 300 --threshold 1 --comparison-operator GreaterThanOrEqualToThreshold --dimensions Name=InstanceId,Value=i-036869f6a45bfa033 --evaluation-periods 2  --alarm-actions arn:aws:sns:ap-south-1:058264130447:cloudwatch_cli_topic --unit Count